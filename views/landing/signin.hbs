<form class="grid-container fluid cell auto" style="position: absolute;top:50%;width:100%;" method="post"
    action="/signin">
    <div class="cell auto">
        <label>
            <h3>
                Email
            </h3>
        </label>
        <input type="email" placeholder="Email" name="email" required>
    </div>

    <div class="cell auto">
        <label>
            <h3>Password</h3>
        </label>
        <input type="password" placeholder="Password" name="password" required>
    </div>

    {{#if error}}
    <div class="cell auto div-error">
        <label class="div-error-label">
            <h3>Error</h3>
        </label>
        <input class="dev-error-input" type="text" placeholder="Error" value="{{error}}" readonly aria-readonly="true">
    </div>
    {{/if}}

    <input type="submit" class="button primary" value="Submit">
</form>